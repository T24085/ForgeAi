  "motion": {
    "guidelines": {
      "approach": "Subtle, intentional, and performance-focused. No flashy animations\u2014every motion serves a purpose.",
      "principles": [
        "Scroll-triggered reveals with staggered delays",
        "Hover states with micro-interactions",
        "Page transitions with fade and slide effects",
        "Button states with color and shadow changes",
        "Form inputs with focus states and subtle animations"
      ],
      "constraints": [
        "All animations should be performant and accessible",
        "Avoid animations on mobile devices where appropriate",
        "Provide reduced motion preference support",
        "Use hardware-accelerated properties (transform, opacity)",
        "Keep animation durations under 500ms for interaction states"
      ],
      "patterns": [
        {
          "name": "Fade In Up",
          "description": "Content fades in from below with a subtle upward motion. Ideal for section headings and cards.",
          "timing": "base",
          "easing": "ease_out",
          "delay": "0ms"
        },
        {
          "name": "Staggered Reveal",
          "description": "Multiple items reveal sequentially for visual interest and improved information hierarchy.",
          "timing": "base",
          "easing": "ease_out",
          "stagger": "100ms"
        },
        {
          "name": "Hover Lift",
          "description": "Elements gently lift and cast a deeper shadow on hover for tactile feedback.",
          "timing": "fast",
          "easing": "ease_out"
        }
      ]
    }
  },
