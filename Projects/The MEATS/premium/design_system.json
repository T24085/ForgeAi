    "composition_rules": [
      {
        "name": "Leading Lines",
        "description": "Use lines to guide focus to main subjects - grill marks, knife edges, plating lines",
        "apply_to": "meat preparation, plated dishes"
      },
      {
        "name": "Negative Space",
        "description": "Allow room for each element to breathe, especially in premium presentation",
